<Window x:Class="PPSwitch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPSwitch"
        mc:Ignorable="d"
        Title="PPSwtich" Height="350" Width="525" ShowInTaskbar="False" WindowStyle="ToolWindow" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lblChosen" HorizontalAlignment="Stretch" Margin="10,27,5,10" VerticalAlignment="Stretch" SelectionChanged="lblChosen_SelectionChanged" MouseDoubleClick="lblChosen_MouseDoubleClick" >

        </ListBox>
        <ListBox x:Name="lblRunning" HorizontalAlignment="Stretch"  Margin="5,27,10,10" VerticalAlignment="Stretch" Grid.Column="1" SelectionChanged="lblRunning_SelectionChanged" MouseDoubleClick="lblRunning_MouseDoubleClick"/>
        <Label Content="Highperformance Plan" HorizontalAlignment="Left" Height="27" Margin="10,0,0,0" VerticalAlignment="Top" Width="243"/>
        <Label Content="Running" Grid.Column="1" HorizontalAlignment="Left" Height="27" Margin="10,0,0,0" VerticalAlignment="Top" Width="177"/>
    </Grid>


</Window>
